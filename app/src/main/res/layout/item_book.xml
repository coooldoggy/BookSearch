<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="model"
            type="com.coooldoggy.booksearch.network.data.Documents" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingBottom="10dp"
        imageUrl="@{model.thumbnail}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/tv_book_title"
        android:text="@{model.title}"
        app:layout_constraintStart_toEndOf="@+id/iv_book"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:maxWidth="220dp"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_date"
        dateTime="@{model.datetime}"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_book_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_book_description"
        android:text="@{model.contents}"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        app:layout_constraintStart_toEndOf="@+id/iv_book"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:textSize="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_description"
        app:layout_constraintStart_toEndOf="@+id/iv_book"
        price="@{model.price}"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_favorite"
        android:padding="10dp"
        android:src="@drawable/favorite_selector"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>